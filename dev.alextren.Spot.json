{
    "app-id": "dev.alextren.Spot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "spot",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--own-name=org.mpris.MediaPlayer2.Spot",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/spot/cargo",
            "RUST_LOG": "info"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "spot",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Doffline=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/xou816/spot.git",
                    "tag": "0.4.0-appdata",
                    "commit": "989c3504bbd5e0f9fd197676ce323f1e55245ebf"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
